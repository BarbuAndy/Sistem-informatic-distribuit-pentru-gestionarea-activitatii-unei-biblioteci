@model WebApplication.Models.NewBookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
</head>

<div class="divBg">
    <div class="row text-center">
        <div class="col-md-6">


            <form method="post" enctype="multipart/form-data" asp-action="AddBook">

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="AuthorName" class="control-label"></label>
                    <input asp-for="AuthorName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="GenreName" class="control-label"></label>
                    <input asp-for="GenreName" class="form-control" required />
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <p>Upload Book Cover</p>
                        <input type="file" asp-for="CoverImage" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <input type="submit" />
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
    
