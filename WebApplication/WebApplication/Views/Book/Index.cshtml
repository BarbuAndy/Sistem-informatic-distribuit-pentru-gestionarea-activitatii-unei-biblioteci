
@model Olympia_Library.Models.BookModel.BookIndexModel

    <head>
        <link rel="stylesheet" href="~/css/booksStyle.css" />
    </head>



<div class="col-lg-12">
    <div class="container" id="bookIndexBody">

        <a asp-controller="Book" asp-action="Create" class="btn btn-dark">
            Add New Book
        </a>

        <a asp-controller="AdminAuthor" asp-action="CreateAuthor" class="btn btn-dark">
            Add New Author
        </a>

        @foreach (var genre in Model.GenreList)
        {
            if (!string.IsNullOrEmpty(genre.Name))
            {
                <div class="row bookCarousel">
                    <h4>@genre.Name</h4>
                    <div class="MultiCarousel " data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
                        <div class="MultiCarousel-inner">

                            @foreach (var book in Model.BookListing)
                            {
                                if (book.GenreId == genre.Id)
                                {
                                    <div class="item">
                                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.BookId">
                                            <img class="bookImage" src="@book.ImageUrl" />
                                        </a>


                                    </div>
                                }

                            }

                        </div>
                        <button class="btn btn-primary leftLst"> &larr; </button>
                        <button class="btn btn-primary rightLst"> &rarr; </button>
                    </div>
                </div>

            }

        }
    </div>

        

    




</div>