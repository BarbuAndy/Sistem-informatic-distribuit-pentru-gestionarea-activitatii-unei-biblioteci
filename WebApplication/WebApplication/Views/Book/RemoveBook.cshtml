@model WebApplication.Models.NewBookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title></title>

</head>



<body>

    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form  asp-action="RemoveBook">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorName" class="control-label"></label>
                        <input asp-for="AuthorName" class="form-control"  />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Remove Book" class="btn btn-primary" />
                    </div>

                    @*@{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Book removed</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Book could not be removed</p>"); }*@

                </form>
            </div>
        </div>
    </div>
</body>
</html>

