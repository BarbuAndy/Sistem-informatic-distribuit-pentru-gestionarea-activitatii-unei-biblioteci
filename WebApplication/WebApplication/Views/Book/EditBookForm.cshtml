@model WebApplication.Models.NewBookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="adminbook" asp-action="editbook">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorName" class="control-label"></label>
                        <input asp-for="AuthorName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreName" class="control-label"></label>
                        <input asp-for="GenreName" class="form-control"  />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Edit book" class="btn btn-primary" />
                    </div>

                    @*@{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Book details changed</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Book details could not be changed</p>"); }*@

                </form>
            </div>
        </div>
    </div>
