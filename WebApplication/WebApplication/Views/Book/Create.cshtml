@model WebApplication.Models.NewBookModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title></title>
    

</head>



<body>

    

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form  asp-action="AddBook">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorName" class="control-label"></label>
                        <input asp-for="AuthorName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <input asp-for="Genre" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add book" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
</html>

