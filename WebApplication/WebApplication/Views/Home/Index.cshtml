@model Olympia_Library.Models.HomeModel.HomeIndexModel 

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/indexStyle.css" />
</head>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


    

    

<div class="row">
    <h2>Browse Genres</h2>
    <div class="MultiCarousel " data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">

        <div class="MultiCarousel-inner">
            @foreach (var genre in Model.Genres)
            {
                <div class="item">
                    <img class="genre-image" src="url(@genre.ImageUrl)" />
                </div>
            }
        </div>

        <button class="btn btn-primary leftLst"> &larr;</button>
        <button class="btn btn-primary rightLst">&rarr;</button>
    </div>
</div>

<div class="row">
    <h2>Here are the latest additions to our library</h2> 
    <div class="homeContent">
    @foreach (var book in Model.LatestAdditions)
    {
        if (!string.IsNullOrEmpty(book.ImageUrl))
        { 
             <img src="@book.ImageUrl" class="latest-additions-image" />
        }
        
    }
    </div>
    
</div>
        

    



