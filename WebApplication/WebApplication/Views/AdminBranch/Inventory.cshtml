@model IEnumerable<WebApplication.Models.BranchModel>

@{
    ViewData["Title"] = "Inventory";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/inventory.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>



</head>


  
    <div class="divBg">
        <table border="1" id="branchesInventory">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        Books available
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @ViewData[item.Name]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


<script type="text/javascript">
    $('#branchesInventory').find('tr').click(function () {
        var branch = $(this).find('td:first').text().trim();
        console.log(branch);
        window.location.href = '@Url.Action("SpecificInventory", "Inventory")' + "?branch=" + branch;

    });
</script>
