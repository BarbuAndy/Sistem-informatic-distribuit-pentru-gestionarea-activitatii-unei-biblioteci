@model WebApplication.Models.AuthorModel

@{
    ViewData["Title"] = "admin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/accountStyle.css")" />

</head>



<body>

    <ul class="center">
        <li><a asp-controller="Index" asp-action="Index"><h2>Home</h2></a></li>
        <li><a asp-controller="Index" asp-action="Books"><h2>Books</h2></a></li>
        <li><a asp-controller="Index" asp-action="BookSpecial"><h2>Book of the day</h2></a></li>
        <li><a asp-controller="Index" asp-action="About"><h2>About</h2></a></li>
        <li><a asp-controller="Index" asp-action="Account"><h2>Account</h2></a></li>
        <li><a asp-controller="Index" asp-action="Admin"><h2> Admin<br />privileges</h2></a></li>
    </ul>

    <div class="divBg">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="editauthor">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Birth_year" class="control-label"></label>
                        <input asp-for="Birth_year" class="form-control"  />
                    </div>
                    <div class="form-group">
                        <label asp-for="Deceased" class="control-label"></label>
                        <input asp-for="Deceased" class="form-control"  />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit Author" class="btn btn-primary" />
                    </div>

                    @{ if (ViewData["Message"] == "1") @Html.Raw("<p style=\"color:green\">Author details changed</p>"); }
                    @{ if (ViewData["Message"] == "0") @Html.Raw("<p style=\"color:red\">Author details could not be changed</p>"); }

                </form>
            </div>
        </div>
    </div>
</body>
</html>

